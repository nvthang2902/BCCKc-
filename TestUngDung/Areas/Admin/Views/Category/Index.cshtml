@model IEnumerable<ModelEF.Model.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Quản Lý Danh mục
}
<style>
    td,th {
        text-align: center;
    }
</style>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách danh mục
            </div>
            <div class="container-fluid">
                <br />
                <div class="row">
                    <div class="col-sm-2">
                        <a class="btn btn-primary" href="@Url.Action("Create","Category")">Thêm mới</a>
                    </div>
                    
                </div>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">

                        <tr>
                            <th>@Html.DisplayNameFor(model => model.IDCategory)</th>
                            <th>
                                @Html.DisplayNameFor(model => model.NameCate)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Description)
                            </th>
                            <th>Thao Tác</th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IDCategory)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NameCate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>

                                    <a href="@Url.Action("Edit", "Category", new { id = item.IDCategory})" class="btn btn-primary">Sửa</a>
                                    <a href="@Url.Action("Details", "Category", new { id = item.IDCategory})" class="btn btn-success">Chi Tiết</a>
                                    <a href="@Url.Action("Delete", "Category", new { id = item.IDCategory})" class="btn btn-danger">Xóa</a>
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>